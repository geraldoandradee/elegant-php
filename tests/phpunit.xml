<phpunit bootstrap="bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="All Tests">
            <directory>.</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="./logs/clover.xml"/>
    </logging>
</phpunit>
